# PostgreSQL Database Environment Configuration
# Copy this file to .env.local and update the values

# PostgreSQL Connection
DATABASE_URL=postgresql://agrismart_user:agrismart_password_2025@localhost:5432/agrismart_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agrismart_db
POSTGRES_USER=agrismart_user
POSTGRES_PASSWORD=agrismart_password_2025

# SSL Configuration (for production)
POSTGRES_SSL=false
POSTGRES_SSL_CERT_PATH=""
POSTGRES_SSL_KEY_PATH=""
POSTGRES_SSL_CA_PATH=""

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=60000

# Development/Production Mode
NODE_ENV=development

# ML Model Configuration
ML_MODEL_VERSION=v1.0
ML_PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Data Refresh Settings
WEATHER_DATA_CACHE_HOURS=6
MARKET_DATA_CACHE_HOURS=24
HISTORICAL_DATA_UPDATE_DAYS=30

# External API Keys (if needed)
WEATHER_API_KEY=""
MARKET_API_KEY=""

# Logging
LOG_LEVEL=info
DB_QUERY_LOGGING=false